<UserControl x:Class="tm_powertool_gui.View.UserControls.PostImage.WindowsUpdate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:tm_powertool_gui.View.UserControls.PostImage"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Label Content="Windows" Foreground="White"/>
        <Button Name="CheckButton" Content="Check" Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Click="CheckButton_Click"/>
        <ListBox Name="UpdatesListBox" Width="560" Height="250" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0"/>
        <Button Name="RunButton" Content="Run" Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,10" Click="RunButton_Click"/>
        <ProgressBar Name="ProgressBar" Width="560" Height="30" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,50"/>

    </Grid>
</UserControl>
